{% extends 'base.html.twig' %}


{% block title %}
    Connexion
{% endblock %}


{% block main %}
    <style>
        label{
            color: #fffffe;
        }
    </style>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm- 10 col-md-8 col-lg-6 p-3">
                <h1 class="text-center">Connexion</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-4 p-3 m-5">
                <form name="login_form" method="post">
                    <div class="form-group">
                        <label class="required" for="username">Pseudo</label>
                        <input type="text" name="_username" id="username" class="form-control" required="required">
                    </div>
                    <div class="form-group">
                        <label class="required" for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password"class="form-control" required="required">
                    </div>
                    <br>
                    <button class="btn btn-block" type="submit" style="background-color: #ff8906; color:#fffffe">Se Connecter</button>
                    <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                    <label for="remember_me">Se souvenir de moi</label>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </form>
            </div>
        </div>
    </div>

{% endblock %}
