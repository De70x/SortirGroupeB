{% extends 'base.html.twig' %}

{% block title %}
    Mot de passe oublié
{% endblock %}

{% block main %}
    <div class="container" style="margin-top: 3em; margin-bottom: 2em">
        <div class="row justify-content-center">
            <div class="col-12 col-sm- 10 col-md-8 col-lg-6 p-3">
                <h1 class="text-center">Mot de passe oublié</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-4 p-3 m-5">
                <form name="reset_form" method="post" action="{{ path('reset_password', {"token":token}) }}">
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Répéter le mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Répéter le mot de passe" required>
                        <input type="hidden" name="token" value="{{ token }}">
                    </div>
                    <button class="btn btn-block" type="submit" style="background-color: #ff8906; color:#fffffe">Changer de mot de passe</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}